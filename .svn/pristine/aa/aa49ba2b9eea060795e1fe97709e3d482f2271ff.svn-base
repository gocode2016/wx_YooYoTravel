/* pages/Home/Detail/HomeDetail.wxss */
@import "../../../vendor/wxParse/wxParse.wxss";
.container{
  display: flex;
  flex: 1;
  background-color: rgb(237, 237, 237);
  width: 100%;
  
  padding-bottom: 110rpx;
}
.headContainer{
   width: 100%;
   position: relative;
   flex-direction: row;
   
}
.bannerImg{
  width: 100%;
  height: 400rpx;
}
.bannerTitle{
  position: absolute;
  bottom: 10rpx;
  left: 30rpx;
  right: 30rpx;
  font-size:28rpx;
  color: white;
  text-align: center;
  
}
.warm_prompt{
  padding: 32rpx;
  background-color: white;
  font-size: 26rpx;
}
.skuItem{
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: center;
  height: 110rpx;
  justify-content: space-between;
  font-size: 28rpx;
   
  
}
.salepanel{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 110rpx;
  background-color: white;
  
}
.zixun{
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  background-color: white;
  height: 100%;
  line-height: 110rpx;
  text-align: center;
  flex: 1
}
.sale{
  display: flex;
  padding: 10rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  height: 100%;
  color: white;
  background-color: orange;
  flex: 5

}
.pointContainer{
   width: 100%;
   display: flex;
   flex-direction: column;
   background-color: white;
   font-size: 24rpx;
   color: grey

}
.pointItemContainer{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;

}
.pointItem{
  margin: 16rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  text-align: center;
 

}
.travelContainer{
  width: 100%;
  background-color: white;

}
.curDay{
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
  font-size: 24rpx;
  padding: 30rpx;

}
.day{
  display: flex;
  background-color: green;
  width: 40rpx;
  height: 40rpx;
  color: white;
  margin-right: 30rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  justify-content: center;
  align-self: center;
  align-items: center;

}
.address:before{
  content: '游玩地点:';
  color:red;
  
}
.travelItem{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx; 
  

}
.travelItem image{
  background-color: red;
  overflow: hidden;
  
  width: 200px;
  height: 80px;
  margin-right: 30rpx;
}
.remark{
  font-size: 24rpx;
  display:flex;
  flex-direction: column;
   

}

